<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/lighterGreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circular_dark_bg"
            android:contentDescription="@string/back_button" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:src="@drawable/ic_arrow_back_white"
            android:layout_gravity="center"
            android:contentDescription="@string/back_button"
            tools:ignore="RtlSymmetry" />
    </FrameLayout>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="131dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/image_profile"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:fontFamily="@font/gilgan"
            android:layout_marginTop="200dp"
            android:text="@string/name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="279dp"
            android:layout_height="62dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittxt"
            android:fontFamily="@font/gilgan"
            android:hint="@string/enter_your_name"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/blockEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilgan"
            android:text="@string/department"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edittxt"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/department_save"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:autofillHints="Department"
                android:backgroundTint="@color/darkGreen"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonsave"
            style="@style/ButtonGreen"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/save"
            android:textSize="18sp" />





    </LinearLayout>

</RelativeLayout>
